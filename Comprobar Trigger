SELECT TEXT
FROM USER_SOURCE
WHERE NAME = 'TAREAS_PROYECTOS_TRG'
ORDER BY LINE;

DROP TRIGGER TAREAS_PROYECTOS_TRG;

CREATE OR REPLACE TRIGGER TAREAS_PROYECTOS_TRG
BEFORE INSERT ON TAREAS_PROYECTOS
FOR EACH ROW
BEGIN
  IF INSERTING AND :NEW.ID IS NULL THEN
    SELECT TAREAS_PROYECTOS_SEQ1.NEXTVAL INTO :NEW.ID FROM DUAL;
  END IF;
END;
/

SHOW ERRORS TRIGGER TAREAS_PROYECTOS_TRG;
